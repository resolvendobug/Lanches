@model CarrinhoCompraViewModel
<div class="container">
    <div class="row">
        <img src="" alt="">
        <div>
            <h4>Seu carrinho de compras: </h4>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th class="text-right">Pre√ßo</th>
                    <th class="text-right">Subtotal</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItems)
                {
                    <tr>
                        <td class="text-center">@item.Quantidade</td>
                        <td class="text-left">@item.Lanche.Nome</td>
                        <td class="text-right">@item.Lanche.Preco.ToString("c")</td>
                        <td class="text-right">@((item.Quantidade * item.Lanche.Preco).ToString("c"))</td>
                        <td class="text-center">
                            <a  asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra" asp-route-Id="@item.Lanche.Id" class="btn btn-danger">
                                
                                <svg bootstrap-icon="Trash" width="24" height="24" aria-label="Trash"></svg>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total:</td>
                    <td colspan="2" class="text-right">@Model.CarrinhoCompraTotal.ToString("c")</td>
                </tr>
            </tfoot>
        </table>

        <div class="text-right">
            <div class="btn-group">
                <a asp-action="Checkout" asp-controller="Pedido" class="btn btn-success">Finalizar compra</a>
                <a asp-action="List" asp-controller="Lanche" class="btn btn-primary">Continuar comprando</a>
            </div>
        </div>

    </div>
</div>