<div class="dropdown">
    <a class="btn btn-danger dropdown-toggle bs-danger" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
        Lanches
    </a>
    <ul class="dropdown-menu bs-danger-border-subtle">
        @foreach (var categoria in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Lanche" asp-action="List" asp-route-categoria="@categoria.Nome">@categoria.Nome</a>
            </li>
        }
        <li class="dropdown-divider"></li>
        <li>
            <a class="dropdown-item" asp-controller="Lanche" asp-action="List" asp-route-categoria="" >Todos os lanches</a>
        </li>
    </ul>
</div>